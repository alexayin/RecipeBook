<h1>Editing recipe</h1>

<% form_for(@recipe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
<ul>
<% @recipe.ingredients.each do |ri| %>
  
  <%i=Ingredient.find(ri.ingredient_id)%>
  <li><%= i.name %> <%= ri.value %></li>
<% end %>
</ul>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>
