  <%= f.error_messages %>

  <p>
    <%= f.label :recipe_id %><br />
    <%= f.text_field :recipe_id %>
  </p>
  <p>
    <%= f.label :ingredient_id %><br />
    <%= f.text_field :ingredient_id %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :unit_id %><br />
