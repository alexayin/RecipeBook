<h1>Listing recipe_ingredients</h1>

<table>
  <tr>
    <th>Recipe</th>
    <th>Ingredient</th>
    <th>Amount</th>
    <th>Unit</th>
  </tr>

<% @recipe_ingredients.each do |recipe_ingredient| %>
  <tr>
    <td><%=h recipe_ingredient.recipe_id %></td>
    <td><%=h recipe_ingredient.ingredient_id %></td>
    <td><%=h recipe_ingredient.amount %></td>
    <td><%=h recipe_ingredient.unit_id %></td>
    <td><%= link_to 'Show', recipe_ingredient %></td>
    <td><%= link_to 'Edit', edit_recipe_ingredient_path(recipe_ingredient) %></td>
    <td><%= link_to 'Destroy', recipe_ingredient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New recipe_ingredient', new_recipe_ingredient_path %>